<?xml version='1.0' encoding='utf-8'?>
<song number="3180" name="Лишь кровь Христа одна" canon="false" text="" textRus="" music="">
    <verse number="1">
        <string>
            <plain>Лишь кровь Христа одна</plain>
        </string>
        <string>
            <plain>и Божья благодать</plain>
        </string>
        <string>
            <plain>грех могут снять с тебя,</plain>
        </string>
        <string>
            <plain>путь верный указать.</plain>
        </string>
    </verse>
    <chorus number="1">
        <string>
            <plain>Лишь кровь Христа -</plain>
        </string>
        <string>
            <plain>источник чудотворный.</plain>
        </string>
        <string>
            <plain>Лишь кровь Христа</plain>
        </string>
        <string>
            <plain>омоет грех позорный.</plain>
        </string>
    </chorus>
    <verse number="2">
        <string>
            <plain>Лишь кровь Христа одна</plain>
        </string>
        <string>
            <plain>ущерб мой возместит,</plain>
        </string>
        <string>
            <plain>снимает долг с меня</plain>
        </string>
        <string>
            <plain>и чудеса творит.</plain>
        </string>
    </verse>
    <verse number="3">
        <string>
            <plain>Лишь кровь Христа одна</plain>
        </string>
        <string>
            <plain>есть выкуп за мой грех,</plain>
        </string>
        <string>
            <plain>и в мире лишь она -</plain>
        </string>
        <string>
            <plain>спасение для всех.</plain>
        </string>
    </verse>
    <verse number="4">
        <string>
            <plain>Лишь кровь Христа одна</plain>
        </string>
        <string>
            <plain>нас с Богом примирит</plain>
        </string>
        <string>
            <plain>И нас на все века</plain>
        </string>
        <string>
            <plain>от бед освободит.</plain>
        </string>
    </verse>
</song>