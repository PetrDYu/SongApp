<?xml version='1.0' encoding='utf-8'?>
<song number="320" name="Идите все на пир" canon="false" text="" textRus="" music="">
    <verse number="1">
        <string>
            <plain>Идите все на пир!</plain>
        </string>
        <string>
            <plain>Зовет Сам Бог;</plain>
        </string>
        <string>
            <plain>Там вы найдете мир,</plain>
        </string>
        <string>
            <plain>Там нет тревог.</plain>
        </string>
        <string>
            <plain>Там радость и покой</plain>
        </string>
        <string>
            <plain>И блещет там струей</plain>
        </string>
        <string>
            <plain>Поток воды живой.</plain>
        </string>
        <string>
            <plain>Придите все!</plain>
        </string>
    </verse>
    <verse number="2">
        <string>
            <plain>Придите все к Христу,</plain>
        </string>
        <string>
            <plain>К Его стопам!</plain>
        </string>
        <string>
            <plain>Любви всю полноту</plain>
        </string>
        <string>
            <plain>Он даст сердцам.</plain>
        </string>
        <string>
            <plain>К Себе Он примет всех,</plain>
        </string>
        <string>
            <plain>С души омоет грех</plain>
        </string>
        <string>
            <plain>И убелит, как снег.</plain>
        </string>
        <string>
            <plain>Придите все!</plain>
        </string>
    </verse>
    <verse number="3">
        <string>
            <plain>Придите вы скорей</plain>
        </string>
        <string>
            <plain>К Нему теперь,</plain>
        </string>
        <string>
            <plain>И Он рукой Своей</plain>
        </string>
        <string>
            <plain>Откроет дверь.</plain>
        </string>
        <string>
            <plain>И обретете в ней,</plain>
        </string>
        <string>
            <plain>Как сладостный елей,</plain>
        </string>
        <string>
            <plain>Забвение скорбей.</plain>
        </string>
        <string>
            <plain>Придите все!</plain>
        </string>
    </verse>
    <verse number="4">
        <string>
            <plain>Придите все, друзья,</plain>
        </string>
        <string>
            <plain>В Отцовский дом!</plain>
        </string>
        <string>
            <plain>Сияют ярче дня</plain>
        </string>
        <string>
            <plain>Святые в нем.</plain>
        </string>
        <string>
            <plain>Венец их там блестит,</plain>
        </string>
        <string>
            <plain>И песня там звучит,</plain>
        </string>
        <string>
            <plain>И в славе Бог царит.</plain>
        </string>
        <string>
            <plain>Придите все!</plain>
        </string>
    </verse>
</song>