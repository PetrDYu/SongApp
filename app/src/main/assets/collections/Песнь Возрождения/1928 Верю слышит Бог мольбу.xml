<?xml version='1.0' encoding='utf-8'?>
<song number="1928" name="Верю слышит Бог мольбу" canon="false" text="" textRus="" music="">
    <verse number="1">
        <string>
            <plain>Верю, слышит Бог мольбу;</plain>
        </string>
        <string>
            <plain>Знаю, слышит Бог мольбу;</plain>
        </string>
        <string>
            <plain>Правда, слышит Бог мольбу,</plain>
        </string>
        <string>
            <plain>Слава Господу!</plain>
        </string>
    </verse>
    <verse number="2">
        <string>
            <plain>Верю, верен слову Бог,</plain>
        </string>
        <string>
            <plain>Знаю, верен слову Бог,</plain>
        </string>
        <string>
            <plain>Правда, верен слову Бог,</plain>
        </string>
        <string>
            <plain>Слава Господу!</plain>
        </string>
    </verse>
    <verse number="3">
        <string>
            <plain>Верю, скоро Он придет,</plain>
        </string>
        <string>
            <plain>Знаю, скоро Он придет,</plain>
        </string>
        <string>
            <plain>Правда, скоро Он придет,</plain>
        </string>
        <string>
            <plain>Слава Господу!</plain>
        </string>
    </verse>
</song>