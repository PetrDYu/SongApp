<?xml version='1.0' encoding='utf-8'?>
<song number="2626" name="Разливайся песня радостным потоком" canon="false" text="" textRus="" music="">
    <verse number="1">
        <string>
            <plain>Разливайся, песня,</plain>
        </string>
        <string>
            <plain>радостным потоком</plain>
        </string>
        <string>
            <plain>- О любви небесной</plain>
        </string>
        <string>
            <plain>близким и далеким.</plain>
        </string>
    </verse>
    <chorus number="1">
        <string>
            <plain>Кто Иисуса любит</plain>
        </string>
        <string>
            <plain>и за Ним идет,</plain>
        </string>
        <string>
            <plain>Тот на небе будет,</plain>
        </string>
        <string>
            <plain>где Господь живет,</plain>
        </string>
        <string>
            <plain>Где Господь живет.</plain>
        </string>
    </chorus>
    <verse number="2">
        <string>
            <plain>В плане Иисуса:</plain>
        </string>
        <string>
            <plain>грешникам спасены,</plain>
        </string>
        <string>
            <plain>Страшная Голгофа,</plain>
        </string>
        <string>
            <plain>радость воскресенья.</plain>
        </string>
    </verse>
    <verse number="3">
        <string>
            <plain>Жить Спаситель будет</plain>
        </string>
        <string>
            <plain>в возрожденном сердце,</plain>
        </string>
        <string>
            <plain>Славьте Бога, люди,</plain>
        </string>
        <string>
            <plain>Он нас спас от смерти.</plain>
        </string>
    </verse>
</song>