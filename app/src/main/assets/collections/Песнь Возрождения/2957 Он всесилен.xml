<?xml version='1.0' encoding='utf-8'?>
<song number="2957" name="Он всесилен" canon="false" text="" textRus="" music="">
    <verse number="1">
        <string>
            <plain>Он всесилен,</plain>
        </string>
        <string>
            <plain>чтобы тебя спасти, о грешник!</plain>
        </string>
        <string>
            <plain>Тьму ночную Он изгнал,</plain>
        </string>
        <string>
            <plain>тебя Он свет послал,</plain>
        </string>
        <string>
            <plain>- в сердце Он в твоем</plain>
        </string>
        <string>
            <plain>сиять всегда желает.</plain>
        </string>
    </verse>
    <chorus number="1">
        <string>
            <plain>Он всесилен,</plain>
        </string>
        <string>
            <plain>чтоб спасти тебя!</plain>
        </string>
    </chorus>
    <verse number="2">
        <string>
            <plain>Он всесилен,</plain>
        </string>
        <string>
            <plain>чтобы тебя спасти, о грешник!</plain>
        </string>
        <string>
            <plain>На сиянье звезд взгляни,</plain>
        </string>
        <string>
            <plain>на моря и ширь земли</plain>
        </string>
        <string>
            <plain>- все Господь создал</plain>
        </string>
        <string>
            <plain>могучею рукою.</plain>
        </string>
    </verse>
    <verse number="3">
        <string>
            <plain>Он всесилен,</plain>
        </string>
        <string>
            <plain>чтобы тебя спасти, о грешник!</plain>
        </string>
        <string>
            <plain>Жизнь твоя в руке Его,</plain>
        </string>
        <string>
            <plain>знает сердце Он твое;</plain>
        </string>
        <string>
            <plain>Он - Отец щедрот</plain>
        </string>
        <string>
            <plain>и всяких благ источник.</plain>
        </string>
    </verse>
    <verse number="4">
        <string>
            <plain>Он всесилен,</plain>
        </string>
        <string>
            <plain>чтобы тебя спасти, о грешник!</plain>
        </string>
        <string>
            <plain>Жар печи Он угасил,</plain>
        </string>
        <string>
            <plain>львов свирепых усмирил;</plain>
        </string>
        <string>
            <plain>Он - от смерти</plain>
        </string>
        <string>
            <plain>и проказы Избавитель.</plain>
        </string>
    </verse>
    <verse number="5">
        <string>
            <plain>Он всесилен,</plain>
        </string>
        <string>
            <plain>чтобы тебя спасти, о грешник!</plain>
        </string>
        <string>
            <plain>Сон царя Он разъяснил,</plain>
        </string>
        <string>
            <plain>Иордан Он осушил;</plain>
        </string>
        <string>
            <plain>исцелял хромых,</plain>
        </string>
        <string>
            <plain>слепых — любви Учитель!</plain>
        </string>
    </verse>
</song>