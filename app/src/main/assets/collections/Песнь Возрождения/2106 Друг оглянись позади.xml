<?xml version='1.0' encoding='utf-8'?>
<song number="2106" name="Друг оглянись позади" canon="false" text="" textRus="" music="">
    <verse number="1">
        <string>
            <plain>Друг, оглянись: позади</plain>
        </string>
        <string>
            <plain>Мрачный твой путь.</plain>
        </string>
        <string>
            <plain>Разве не думаешь ты</plain>
        </string>
        <string>
            <plain>С него свернуть?</plain>
        </string>
    </verse>
    <verse number="2">
        <string>
            <plain>Рядом тернистый сей путь</plain>
        </string>
        <string>
            <plain>В небеса:</plain>
        </string>
        <string>
            <plain>Друг, торопись повернуть,</plain>
        </string>
        <string>
            <plain>Будешь там.</plain>
        </string>
    </verse>
    <verse number="3">
        <string>
            <plain>Если желаешь идти,</plain>
        </string>
        <string>
            <plain>Ты стремись</plain>
        </string>
        <string>
            <plain>Вечную жизнь найти,</plain>
        </string>
        <string>
            <plain>Только молись.</plain>
        </string>
    </verse>
    <verse number="4">
        <string>
            <plain>Кровью пречистой святой</plain>
        </string>
        <string>
            <plain>Нас искупил,</plain>
        </string>
        <string>
            <plain>И для тебя</plain>
        </string>
        <string>
            <plain>Сам Христос Путь открыл.</plain>
        </string>
    </verse>
    <verse number="5">
        <string>
            <plain>Друг, оглянись: позади</plain>
        </string>
        <string>
            <plain>Мрачный твой путь.</plain>
        </string>
        <string>
            <plain>Разве не думаешь ты</plain>
        </string>
        <string>
            <plain>С него свернуть?</plain>
        </string>
    </verse>
    <verse number="6">
        <string>
            <plain>Время так быстро бежит,</plain>
        </string>
        <string>
            <plain>Поздний час.</plain>
        </string>
        <string>
            <plain>Не опоздай, торопись,</plain>
        </string>
        <string>
            <plain>Друг, сейчас.</plain>
        </string>
    </verse>
</song>