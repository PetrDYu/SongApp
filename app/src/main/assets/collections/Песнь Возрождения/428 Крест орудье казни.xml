<?xml version='1.0' encoding='utf-8'?>
<song number="428" name="Крест орудье казни" canon="false" text="" textRus="" music="">
    <verse number="1">
        <string>
            <plain>Крест - орудье казни -</plain>
        </string>
        <string>
            <plain>На Голгофу нес</plain>
        </string>
        <string>
            <plain>Кротко, без боязни</plain>
        </string>
        <string>
            <plain>Мой Господь Христос.</plain>
        </string>
    </verse>
    <verse number="2">
        <string>
            <plain>И Его хотенье,</plain>
        </string>
        <string>
            <plain>Чтоб в пути земном</plain>
        </string>
        <string>
            <plain>Шел и я в терпенье</plain>
        </string>
        <string>
            <plain>Под Его крестом.</plain>
        </string>
    </verse>
    <verse number="3">
        <string>
            <plain>Но, идя смиренно</plain>
        </string>
        <string>
            <plain>Под крестом скорбей,</plain>
        </string>
        <string>
            <plain>Падал Царь вселенной</plain>
        </string>
        <string>
            <plain>На глазах людей.</plain>
        </string>
    </verse>
    <verse number="4">
        <string>
            <plain>Мой же крест суровый</plain>
        </string>
        <string>
            <plain>Сам Он облегчил,</plain>
        </string>
        <string>
            <plain>Сняв греха оковы,</plain>
        </string>
        <string>
            <plain>Бремя усладил.</plain>
        </string>
    </verse>
    <verse number="5">
        <string>
            <plain>Его иго благо,</plain>
        </string>
        <string>
            <plain>И в душе моей</plain>
        </string>
        <string>
            <plain>Радость и отвага</plain>
        </string>
        <string>
            <plain>Под крестом скорбей.</plain>
        </string>
    </verse>
    <verse number="6">
        <string>
            <plain>Его бремя, знаю,</plain>
        </string>
        <string>
            <plain>Будет мне легко;</plain>
        </string>
        <string>
            <plain>На Него взираю,</plain>
        </string>
        <string>
            <plain>Он не далеко.</plain>
        </string>
    </verse>
</song>