<?xml version='1.0' encoding='utf-8'?>
<song number="476" name="Бог любит малых воробьев" canon="false" text="" textRus="" music="">
    <verse number="1">
        <string>
            <plain>Бог любит малых воробьев,</plain>
        </string>
        <string>
            <plain>От гибели храня;</plain>
        </string>
        <string>
            <plain>И, если пташек любит Бог,</plain>
        </string>
        <string>
            <plain>Он любит и меня.</plain>
        </string>
    </verse>
    <chorus number="1">
        <string>
            <plain>Да, любит Он! Да, любит Он!</plain>
        </string>
        <string>
            <plain>Я знаю, любит Он!</plain>
        </string>
        <string>
            <plain>Он любит маленьких детей;</plain>
        </string>
        <string>
            <plain>Он любит и меня.</plain>
        </string>
    </chorus>
    <verse number="2">
        <string>
            <plain>Бог любит лилию в полях</plain>
        </string>
        <string>
            <plain>У тихого ручья;</plain>
        </string>
        <string>
            <plain>И, если любит Он цветы,</plain>
        </string>
        <string>
            <plain>Он любит и меня.</plain>
        </string>
    </verse>
    <verse number="3">
        <string>
            <plain>Бог сотворил цветы и птиц,</plain>
        </string>
        <string>
            <plain>Их светом осеня;</plain>
        </string>
        <string>
            <plain>Он не забудет и детей,</plain>
        </string>
        <string>
            <plain>Он любит и меня.</plain>
        </string>
    </verse>
</song>