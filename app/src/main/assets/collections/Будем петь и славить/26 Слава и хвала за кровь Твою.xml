<?xml version='1.0' encoding='utf-8'?>
<song number="26" name="Слава и хвала за кровь Твою" canon="false" text="" textRus="" music="" additionalInfo="">
    <verse number="1">
        <string>
            <repeat id="0" rep_rate="-1" is_opening="true" />
            <plain>Слава и хвала за кровь Твою,</plain>
            <repeat id="0" rep_rate="3" is_opening="false" />
        </string>
        <string>
            <plain>Любящий Иисус</plain>
        </string>
    </verse>
    <verse number="0">
        <string>
            <plain>Кровь Христа омыла меня,</plain>
        </string>
        <string>
            <plain>Кровь Христа освободила меня,</plain>
        </string>
        <string>
            <plain>Кровь Христа омыла меня от всякого греха.</plain>
        </string>
    </verse>
    <verse number="2">
        <string>
            <repeat id="1" rep_rate="-1" is_opening="true" />
            <plain>Слава и хвала за смерть Твою,</plain>
            <repeat id="1" rep_rate="3" is_opening="false" />
        </string>
        <string>
            <plain>Любящий Иисус.</plain>
        </string>
    </verse>
    <verse number="0">
        <string>
            <plain>Смертью Ты примирил нас с Отцом,</plain>
        </string>
        <string>
            <plain>Смертью Ты навеки нас приобрел,</plain>
        </string>
        <string>
            <plain>Смертью Ты примирил нас с Отцом,</plain>
        </string>
        <string>
            <plain>Теперь мы все – сыны.</plain>
        </string>
    </verse>
    <verse number="3">
        <string>
            <repeat id="2" rep_rate="-1" is_opening="true" />
            <plain>Слава и хвала за жизнь Твою,</plain>
            <repeat id="2" rep_rate="3" is_opening="false" />
        </string>
        <string>
            <plain>Любящий Иисус.</plain>
        </string>
    </verse>
    <verse number="0">
        <string>
            <plain>Жизнь Христа наполнила нас,</plain>
        </string>
        <string>
            <plain>Жизнь Христа бурным потоком течет,</plain>
        </string>
        <string>
            <plain>Жизнь Христа нам силу дает,</plain>
        </string>
        <string>
            <plain>Чтоб побеждать нам мир.</plain>
        </string>
    </verse>
    <verse number="4">
        <string>
            <repeat id="3" rep_rate="-1" is_opening="true" />
            <plain>Слава и хвала за Духа Святого,</plain>
            <repeat id="3" rep_rate="3" is_opening="false" />
        </string>
        <string>
            <plain>Любящий Иисус.</plain>
        </string>
    </verse>
    <verse number="0">
        <string>
            <plain>Дух Христов вошел в меня,</plain>
        </string>
        <string>
            <plain>Дух Христов теперь живет во мне,</plain>
        </string>
        <string>
            <plain>Дух Христов ведет меня</plain>
        </string>
        <string>
            <plain>В обители Отца.</plain>
        </string>
    </verse>
</song>