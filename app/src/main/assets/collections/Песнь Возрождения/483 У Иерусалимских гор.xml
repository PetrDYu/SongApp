<?xml version='1.0' encoding='utf-8'?>
<song number="483" name="У Иерусалимских гор" canon="false" text="" textRus="" music="">
    <verse number="1">
        <string>
            <plain>У Иерусалимских гор</plain>
        </string>
        <string>
            <plain>Пел Иисусу детский хор.</plain>
        </string>
        <string>
            <plain>И теперь детей уста</plain>
        </string>
        <string>
            <plain>Могут петь хвалу Христа.</plain>
        </string>
    </verse>
    <chorus number="1">
        <string>
            <plain>Пой, пой, пой! О юный хор детей.</plain>
        </string>
        <string>
            <plain>Пой, пой, пой! О юный хор детей,</plain>
        </string>
        <string>
            <plain>И осанну, и осанну.</plain>
        </string>
        <string>
            <plain>Воспевай Царю царей.</plain>
        </string>
    </chorus>
    <verse number="2">
        <string>
            <plain>Учат нас Христа любить,</plain>
        </string>
        <string>
            <plain>По Его ученью жить</plain>
        </string>
        <string>
            <plain>И ходить Его путем;</plain>
        </string>
        <string>
            <plain>Славен наш Господь во всем!</plain>
        </string>
    </verse>
    <verse number="3">
        <string>
            <plain>Братья, матери, друзья!</plain>
        </string>
        <string>
            <plain>Стройте дружно голоса,</plain>
        </string>
        <string>
            <plain>Чтоб неслась среди житья</plain>
        </string>
        <string>
            <plain>Песнь "осанны" в небеса.</plain>
        </string>
    </verse>
</song>