<?xml version='1.0' encoding='utf-8'?>
<song number="256" name="Одаренные спасеньем" canon="false" text="" textRus="" music="">
    <verse number="1">
        <string>
            <plain>Одаренные спасеньем,</plain>
        </string>
        <string>
            <plain>Чужды мы греховных уз;</plain>
        </string>
        <string>
            <plain>Братским сладостным общеньем</plain>
        </string>
        <string>
            <plain>Спаяны в один союз.</plain>
        </string>
    </verse>
    <chorus number="1">
        <string>
            <plain>За единство Церкви Божьей</plain>
        </string>
        <string>
            <plain>Всей душою постоим,</plain>
        </string>
        <string>
            <plain>Усиляя битву с ложью,</plain>
        </string>
        <string>
            <plain>Грех и козни победим.</plain>
        </string>
    </chorus>
    <verse number="2">
        <string>
            <plain>В ночь делений единенье</plain>
        </string>
        <string>
            <plain>Крепко, братья, сохраним,</plain>
        </string>
        <string>
            <plain>И, покорные ученью,</plain>
        </string>
        <string>
            <plain>Будем следовать за Ним.</plain>
        </string>
    </verse>
    <verse number="3">
        <string>
            <plain>Твердой верой в дни сомненья</plain>
        </string>
        <string>
            <plain>Божий стан огородим,</plain>
        </string>
        <string>
            <plain>Яд сомнений, маловерья</plain>
        </string>
        <string>
            <plain>До конца искореним.</plain>
        </string>
    </verse>
    <verse number="4">
        <string>
            <plain>Семена любви посеем</plain>
        </string>
        <string>
            <plain>До окраины морей,</plain>
        </string>
        <string>
            <plain>Духом Божьим пламенея,</plain>
        </string>
        <string>
            <plain>Разбросаем жар огней.</plain>
        </string>
    </verse>
</song>