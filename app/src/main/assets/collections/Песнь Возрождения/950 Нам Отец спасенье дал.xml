<?xml version='1.0' encoding='utf-8'?>
<song number="950" name="Нам Отец спасенье дал" canon="false" text="" textRus="" music="">
    <verse number="1">
        <string>
            <plain>Нам Отец спасенье дал</plain>
        </string>
        <string>
            <plain>Даром, даром, даром.</plain>
        </string>
        <string>
            <plain>С неба Сына нам послал</plain>
        </string>
        <string>
            <plain>Даром, даром, даром.</plain>
        </string>
        <string>
            <plain>Наши все грехи простил,</plain>
        </string>
        <string>
            <plain>Кровию Своей омыл,</plain>
        </string>
        <string>
            <plain>С Богом нас Он примирил</plain>
        </string>
        <string>
            <plain>Даром, даром, даром.</plain>
        </string>
    </verse>
    <verse number="2">
        <string>
            <plain>Вот течет поток для всех</plain>
        </string>
        <string>
            <plain>Даром, даром, даром.</plain>
        </string>
        <string>
            <plain>Дар спасенья даровал</plain>
        </string>
        <string>
            <plain>Даром, даром, даром.</plain>
        </string>
        <string>
            <plain>Всякий, кто к Нему придет,</plain>
        </string>
        <string>
            <plain>Тот спасение найдет</plain>
        </string>
        <string>
            <plain>И получит тот венец</plain>
        </string>
        <string>
            <plain>Даром, даром, даром.</plain>
        </string>
    </verse>
    <verse number="3">
        <string>
            <plain>Грешник, любит Бог тебя</plain>
        </string>
        <string>
            <plain>Даром, даром, даром.</plain>
        </string>
        <string>
            <plain>Хочет Он спасти тебя</plain>
        </string>
        <string>
            <plain>Даром, даром, даром.</plain>
        </string>
        <string>
            <plain>Сердце ты Ему отдай,</plain>
        </string>
        <string>
            <plain>Этот зов не отвергай</plain>
        </string>
        <string>
            <plain>И получишь вечный рай</plain>
        </string>
        <string>
            <plain>Даром, даром, даром.</plain>
        </string>
    </verse>
</song>