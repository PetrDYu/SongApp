<?xml version='1.0' encoding='utf-8'?>
<song number="628" name="Во гробе Он лежал" canon="false" text="" textRus="" music="">
    <verse number="1">
        <string>
            <plain>Во гробе Он лежал,</plain>
        </string>
        <string>
            <plain>Иисус Спаситель,</plain>
        </string>
        <string>
            <plain>Дня славы ожидал, -</plain>
        </string>
        <string>
            <plain>Иисус Господь!</plain>
        </string>
    </verse>
    <chorus number="1">
        <string>
            <plain>Из гроба Он восстал</plain>
        </string>
        <string>
            <plain>И все силы вражьи Он попрал;</plain>
        </string>
        <string>
            <plain>Он воскрес, над тьмой победу одержал</plain>
        </string>
        <string>
            <plain>И с Ним вечно царствовать Своих призвал.</plain>
        </string>
        <string>
            <plain>Он воскрес! Он воскрес!</plain>
        </string>
        <string>
            <plain>Аллилуйя, Он воскрес!</plain>
        </string>
    </chorus>
    <verse number="2">
        <string>
            <plain>Напрасно стерегут,</plain>
        </string>
        <string>
            <plain>Иисус Спаситель!</plain>
        </string>
        <string>
            <plain>Тщетно печать кладут, -</plain>
        </string>
        <string>
            <plain>Иисус Господь!</plain>
        </string>
    </verse>
    <verse number="3">
        <string>
            <plain>Смерть побеждается,</plain>
        </string>
        <string>
            <plain>Иисус Спаситель!</plain>
        </string>
        <string>
            <plain>Плен расторгается, -</plain>
        </string>
        <string>
            <plain>Иисус Господь!</plain>
        </string>
    </verse>
</song>