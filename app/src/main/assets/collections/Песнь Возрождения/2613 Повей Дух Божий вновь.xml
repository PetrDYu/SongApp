<?xml version='1.0' encoding='utf-8'?>
<song number="2613" name="Повей Дух Божий вновь" canon="false" text="" textRus="" music="">
    <verse number="1">
        <string>
            <plain>Повей, Дух Божий, вновь,</plain>
        </string>
        <string>
            <plain>Открой источник благ,</plain>
        </string>
        <string>
            <plain>Чтоб проявлял Твою любовь</plain>
        </string>
        <string>
            <plain>Во всех моих делах.</plain>
        </string>
    </verse>
    <verse number="2">
        <string>
            <plain>Повей, Дух Божий, вновь,</plain>
        </string>
        <string>
            <plain>И сердце так очисть,</plain>
        </string>
        <string>
            <plain>Чтоб не касалася грехов</plain>
        </string>
        <string>
            <plain>Моя земная жизнь.</plain>
        </string>
    </verse>
    <verse number="3">
        <string>
            <plain>Повей, Дух Божий, вновь,</plain>
        </string>
        <string>
            <plain>Чтоб в этом мире злом</plain>
        </string>
        <string>
            <plain>Я был всегда везде готов</plain>
        </string>
        <string>
            <plain>Гореть Твоим огнем.</plain>
        </string>
    </verse>
    <verse number="4">
        <string>
            <plain>Повей, Дух Божий, вновь,</plain>
        </string>
        <string>
            <plain>Чтоб смерти я не знал,</plain>
        </string>
        <string>
            <plain>А здесь и там вовек веков</plain>
        </string>
        <string>
            <plain>Иисуса прославлял. Аминь.</plain>
        </string>
    </verse>
</song>