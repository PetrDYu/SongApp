<?xml version='1.0' encoding='utf-8'?>
<song number="143" name="О милосердный Бог" canon="false" text="" textRus="" music="">
    <verse number="1">
        <string>
            <plain>О милосердный Бог!</plain>
        </string>
        <string>
            <plain>Ты - Бог любви, даров;</plain>
        </string>
        <string>
            <plain>Сияет в небе Твой чертог</plain>
        </string>
        <string>
            <plain>Века веков,</plain>
        </string>
        <string>
            <plain>Иегова вечный Ты;</plain>
        </string>
        <string>
            <plain>Весь мир поет Тебе;</plain>
        </string>
        <string>
            <plain>Я имя вечной правоты</plain>
        </string>
        <string>
            <plain>Хвалю в мольбе.</plain>
        </string>
    </verse>
    <verse number="2">
        <string>
            <plain>О милосердный Бог!</plain>
        </string>
        <string>
            <plain>Я по Твоим словам</plain>
        </string>
        <string>
            <plain>Иду, чтоб радоваться там,</plain>
        </string>
        <string>
            <plain>Где нет тревог,</plain>
        </string>
        <string>
            <plain>Мир мною позабыт,</plain>
        </string>
        <string>
            <plain>Отверг греха я власть;</plain>
        </string>
        <string>
            <plain>В Тебе ищу свою я часть,</plain>
        </string>
        <string>
            <plain>Оплот и щит.</plain>
        </string>
    </verse>
    <verse number="3">
        <string>
            <plain>О милосердный Бог!</plain>
        </string>
        <string>
            <plain>Чтоб дух мой провождать,</plain>
        </string>
        <string>
            <plain>Ты дал Свою мне благодать,</plain>
        </string>
        <string>
            <plain>Светильник ног.</plain>
        </string>
        <string>
            <plain>Червь пред Тобою я,</plain>
        </string>
        <string>
            <plain>Но Ты Себя зовешь</plain>
        </string>
        <string>
            <plain>"Моим" и знаю, Ты спасешь</plain>
        </string>
        <string>
            <plain>Навек меня.</plain>
        </string>
    </verse>
    <verse number="4">
        <string>
            <plain>Мне обещал Он Сам,</plain>
        </string>
        <string>
            <plain>И верен Он в словах,</plain>
        </string>
        <string>
            <plain>Что вознесусь, как на крылах,</plain>
        </string>
        <string>
            <plain>Я к небесам.</plain>
        </string>
        <string>
            <plain>Там буду созерцать</plain>
        </string>
        <string>
            <plain>Я Бога Своего,</plain>
        </string>
        <string>
            <plain>И ввек там буду воспевать</plain>
        </string>
        <string>
            <plain>Я чудеса Его.</plain>
        </string>
    </verse>
    <verse number="5">
        <string>
            <plain>Святые пред Тобой</plain>
        </string>
        <string>
            <plain>Поют вдали от зла:</plain>
        </string>
        <string>
            <plain>"Отец и Сын и Дух Святой!</plain>
        </string>
        <string>
            <plain>Тебе хвала!"</plain>
        </string>
        <string>
            <plain>О милосердный Бог!</plain>
        </string>
        <string>
            <plain>Хоть я в служенье плох,</plain>
        </string>
        <string>
            <plain>Хочу и я Тебе вознесть</plain>
        </string>
        <string>
            <plain>Хвалу и честь.</plain>
        </string>
    </verse>
</song>