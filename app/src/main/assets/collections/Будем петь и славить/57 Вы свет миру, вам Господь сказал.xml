<song number="57" name="Вы свет миру, вам Господь сказал" canon="false" text="" textRus="Е. Орловой, И. Языковой" music="" additionalInfo="">
    <verse number="1">
        <string>
            <repeat id="0" rep_rate="-1" is_opening="true" />
            <plain>Вы – свет миру, вам Господь сказал,</plain>
            <repeat id="0" rep_rate="2" is_opening="false" />
        </string>
        <string>
            <repeat id="1" rep_rate="-1" is_opening="true" />
            <plain>Чтобы видели люди ваши добрые дела</plain>
        </string>
        <string>
            <plain>И прославили Того, Кто вас послал.</plain>
            <repeat id="1" rep_rate="2" is_opening="false" />
        </string>
    </verse>
    <verse number="2">
        <string>
            <repeat id="2" rep_rate="-1" is_opening="true" />
            <plain>Мы – свет миру, нам Господь сказал,</plain>
            <repeat id="2" rep_rate="2" is_opening="false" />
        </string>
        <string>
            <repeat id="3" rep_rate="-1" is_opening="true" />
            <plain>Чтобы видели люди наши добрые дела</plain>
        </string>
        <string>
            <plain>И прославили Того, Кто нас послал.</plain>
            <repeat id="3" rep_rate="2" is_opening="false" />
        </string>
    </verse>
