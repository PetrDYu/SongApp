<?xml version='1.0' encoding='utf-8'?>
<song number="452" name="Господь вот мы избрали" canon="false" text="" textRus="" music="">
    <verse number="1">
        <string>
            <plain>Господь, вот мы избрали</plain>
        </string>
        <string>
            <plain>Служителей Твоих;</plain>
        </string>
        <string>
            <plain>Тебя мы умоляли,</plain>
        </string>
        <string>
            <plain>Ты указал нам их.</plain>
        </string>
    </verse>
    <verse number="2">
        <string>
            <plain>Благослови служенье</plain>
        </string>
        <string>
            <plain>Избранников Твоих,</plain>
        </string>
        <string>
            <plain>Дай им Твое терпенье,</plain>
        </string>
        <string>
            <plain>Успех в трудах святых.</plain>
        </string>
    </verse>
    <verse number="3">
        <string>
            <plain>Их наставляй в заботе,</plain>
        </string>
        <string>
            <plain>Как наставлял других,</plain>
        </string>
        <string>
            <plain>Бороться с властью плоти</plain>
        </string>
        <string>
            <plain>И вымыслов людских.</plain>
        </string>
    </verse>
    <verse number="4">
        <string>
            <plain>Их сделай образцами</plain>
        </string>
        <string>
            <plain>Для общины Твоей,</plain>
        </string>
        <string>
            <plain>Чтоб словом и делами</plain>
        </string>
        <string>
            <plain>Служили для людей.</plain>
        </string>
    </verse>
    <verse number="5">
        <string>
            <plain>В минуты огорчений</plain>
        </string>
        <string>
            <plain>Их Духом подкрепляй</plain>
        </string>
        <string>
            <plain>И даром откровений</plain>
        </string>
        <string>
            <plain>Обильно наделяй.</plain>
        </string>
    </verse>
</song>