<?xml version='1.0' encoding='utf-8'?>
<song number="1748" name="Зажигались в небе звезды" canon="false" text="" textRus="" music="">
    <verse number="1">
        <string>
            <plain>Зажигались в небе звезды,</plain>
        </string>
        <string>
            <plain>Ласково маня.</plain>
        </string>
        <string>
            <plain>Знаю, там, в Отчизне, ждешь</plain>
        </string>
        <string>
            <plain>Ты, Господи, меня.</plain>
        </string>
    </verse>
    <chorus number="1">
        <string>
            <plain>Я записан в книге жизни,</plain>
        </string>
        <string>
            <plain>Вечной и святой.</plain>
        </string>
        <string>
            <plain>Встречусь скоро я в Отчизне,</plain>
        </string>
        <string>
            <plain>Мой Господь, с Тобой.</plain>
        </string>
    </chorus>
    <verse number="2">
        <string>
            <plain>И меня, земного, манит</plain>
        </string>
        <string>
            <plain>Голубая высь,</plain>
        </string>
        <string>
            <plain>Стаи пламенных желаний</plain>
        </string>
        <string>
            <plain>В вечность унеслись.</plain>
        </string>
    </verse>
    <verse number="3">
        <string>
            <plain>Верю, что приду когда-то</plain>
        </string>
        <string>
            <plain>В небо, как домой...</plain>
        </string>
        <string>
            <plain>И душа тоской объята</plain>
        </string>
        <string>
            <plain>По стране родной.</plain>
        </string>
    </verse>
</song>