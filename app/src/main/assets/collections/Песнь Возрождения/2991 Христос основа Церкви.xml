<?xml version='1.0' encoding='utf-8'?>
<song number="2991" name="Христос основа Церкви" canon="false" text="" textRus="" music="">
    <verse number="1">
        <string>
            <plain>Христос - основа Церкви,</plain>
        </string>
        <string>
            <plain>на Нем стоит она,</plain>
        </string>
        <string>
            <plain>Его бессмертным</plain>
        </string>
        <string>
            <plain>Словом она возрождена.</plain>
        </string>
        <string>
            <plain>С небес пришел Спаситель</plain>
        </string>
        <string>
            <plain>и Церковь основал,</plain>
        </string>
        <string>
            <plain>Своей святой невестой</plain>
        </string>
        <string>
            <plain>Христос ее назвал.</plain>
        </string>
    </verse>
    <verse number="2">
        <string>
            <plain>Рассеяна повсюду,</plain>
        </string>
        <string>
            <plain>но Духом скреплена,</plain>
        </string>
        <string>
            <plain>единым хлебом свыше</plain>
        </string>
        <string>
            <plain>питаема она.</plain>
        </string>
        <string>
            <plain>Одно святое имя</plain>
        </string>
        <string>
            <plain>сливает все сердца</plain>
        </string>
        <string>
            <plain>в едином упованьи.</plain>
        </string>
        <string>
            <plain>О, Господу хвала!</plain>
        </string>
    </verse>
    <verse number="3">
        <string>
            <plain>Она в столетних</plain>
        </string>
        <string>
            <plain>спорах была угнетена,</plain>
        </string>
        <string>
            <plain>в бесчисленных</plain>
        </string>
        <string>
            <plain>раздорах невидима была.</plain>
        </string>
        <string>
            <plain>Но все святые ждали:</plain>
        </string>
        <string>
            <plain>настанет день и час,</plain>
        </string>
        <string>
            <plain>свет яркий засияет</plain>
        </string>
        <string>
            <plain>и тьма уйдет тотчас.</plain>
        </string>
    </verse>
    <verse number="4">
        <string>
            <plain>Вечерний свет сияет,</plain>
        </string>
        <string>
            <plain>туманный день прошел,</plain>
        </string>
        <string>
            <plain>все скорби исчезают</plain>
        </string>
        <string>
            <plain>и снят с нее позор.</plain>
        </string>
        <string>
            <plain>Иисус чрез Слово правды</plain>
        </string>
        <string>
            <plain>к единству всех зовет,</plain>
        </string>
        <string>
            <plain>и рушатся преграды.</plain>
        </string>
        <string>
            <plain>О, славен наш Господь!</plain>
        </string>
    </verse>
    <verse number="5">
        <string>
            <plain>Назад к одной основе,</plain>
        </string>
        <string>
            <plain>заложенной Христом,</plain>
        </string>
        <string>
            <plain>идут святые снова</plain>
        </string>
        <string>
            <plain>в вечерний час в Сион.</plain>
        </string>
        <string>
            <plain>Мы ныне видим Церковь,</plain>
        </string>
        <string>
            <plain>как в утренние дни:</plain>
        </string>
        <string>
            <plain>один Бог, одна вера!</plain>
        </string>
        <string>
            <plain>Достоин Бог хвалы!</plain>
        </string>
    </verse>
</song>