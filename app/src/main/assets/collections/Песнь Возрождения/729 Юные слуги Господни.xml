<?xml version='1.0' encoding='utf-8'?>
<song number="729" name="Юные слуги Господни" canon="false" text="" textRus="" music="">
    <verse number="1">
        <string>
            <plain>Юные слуги Господни!</plain>
        </string>
        <string>
            <plain>Малых идите спасать,</plain>
        </string>
        <string>
            <plain>К Господу их приведите,</plain>
        </string>
        <string>
            <plain>Путь им спеша указать.</plain>
        </string>
    </verse>
    <chorus number="1">
        <string>
            <plain>Юные слуги Господни!</plain>
        </string>
        <string>
            <plain>Сейте вы радость кругом;</plain>
        </string>
        <string>
            <plain>С пеньем в пути вы стремитесь</plain>
        </string>
        <string>
            <plain>К выси, вперед в вечный дом.</plain>
        </string>
    </chorus>
    <verse number="2">
        <string>
            <plain>Юные слуги Господни!</plain>
        </string>
        <string>
            <plain>Дружно за правду вперед!</plain>
        </string>
        <string>
            <plain>Гибнущих в тьме соберите</plain>
        </string>
        <string>
            <plain>К свету небесных красот.</plain>
        </string>
    </verse>
    <verse number="3">
        <string>
            <plain>Юные слуги Господни!</plain>
        </string>
        <string>
            <plain>Медлить сегодня зачем?</plain>
        </string>
        <string>
            <plain>Многих, о Боге забывших,</plain>
        </string>
        <string>
            <plain>Бездна уносит совсем.</plain>
        </string>
    </verse>
    <verse number="4">
        <string>
            <plain>Юные слуги Господни!</plain>
        </string>
        <string>
            <plain>С хлебом спешите святым,</plain>
        </string>
        <string>
            <plain>Их приведите к Иисусу,</plain>
        </string>
        <string>
            <plain>Будут насыщены Им.</plain>
        </string>
    </verse>
</song>