<?xml version='1.0' encoding='utf-8'?>
<song number="3037" name="Если скорбь тебя теснит" canon="false" text="" textRus="" music="">
    <verse number="1">
        <string>
            <plain>Если скорбь тебя теснит</plain>
        </string>
        <string>
            <plain>- всё скажи Иисусу,</plain>
        </string>
        <string>
            <plain>если враг тебе грозит</plain>
        </string>
        <string>
            <plain>- всё скажи Иисусу.</plain>
        </string>
    </verse>
    <chorus number="1">
        <string>
            <plain>С верой на Него взирай,</plain>
        </string>
        <string>
            <plain>на Него лишь уповай,</plain>
        </string>
        <string>
            <plain>лишь Его словам внимай</plain>
        </string>
        <string>
            <plain>- всё скажи Иисусу.</plain>
        </string>
    </chorus>
    <verse number="2">
        <string>
            <plain>Если станет тяжко жить</plain>
        </string>
        <string>
            <plain>- доверяй Иисусу,</plain>
        </string>
        <string>
            <plain>знай: всему должно так быть,</plain>
        </string>
        <string>
            <plain>доверяй Иисусу</plain>
        </string>
    </verse>
    <verse number="3">
        <string>
            <plain>И в заботе и в нужде</plain>
        </string>
        <string>
            <plain>обратись к Иисусу,</plain>
        </string>
        <string>
            <plain>обещал помочь тебе</plain>
        </string>
        <string>
            <plain>- обратись к Иисусу</plain>
        </string>
    </verse>
    <verse number="4">
        <string>
            <plain>А гонения придут</plain>
        </string>
        <string>
            <plain>- помолись Иисусу,</plain>
        </string>
        <string>
            <plain>иль в темницу поведут</plain>
        </string>
        <string>
            <plain>- помолись Иисусу.</plain>
        </string>
    </verse>
    <verse number="5">
        <string>
            <plain>И в последний жизни час</plain>
        </string>
        <string>
            <plain>всё скажи Иисусу,</plain>
        </string>
        <string>
            <plain>Он тебя навеки спас</plain>
        </string>
        <string>
            <plain>- всё скажи Иисусу.</plain>
        </string>
    </verse>
</song>