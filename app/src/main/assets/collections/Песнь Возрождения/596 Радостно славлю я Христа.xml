<song number="596" name="Радостно славлю я Христа" canon="false" text="" textRus="" music="">
    <verse number="1">
        <string>
            <plain>Радостно славлю я Христа,</plain>
        </string>
        <string>
            <plain>Славьте Иисуса все места!</plain>
        </string>
        <string>
            <plain>Быв рожден, как дитя,</plain>
        </string>
        <string>
            <plain>Был Он в ясли положен.</plain>
        </string>
    </verse>
    <chorus number="1">
        <string>
            <plain>Славьте Иисуса все места!</plain>
        </string>
        <string>
            <plain>Царь Иисус в пещере</plain>
        </string>
        <string>
            <plain>Кротко возлежал,</plain>
        </string>
        <string>
            <plain>Пастухов и мудрецов</plain>
        </string>
        <string>
            <plain>К яслям привлекал.</plain>
        </string>
    </chorus>
