<?xml version='1.0' encoding='utf-8'?>
<song number="1916" name="Всюду пусть горе" canon="false" text="" textRus="" music="">
    <verse number="1">
        <string>
            <plain>Всюду пусть горе,</plain>
        </string>
        <string>
            <plain>Скорбь, теснота,</plain>
        </string>
        <string>
            <plain>Сменит их вскоре</plain>
        </string>
        <string>
            <plain>Блаженство в царстве Христа.</plain>
        </string>
        <string>
            <plain>Пусть раздаются</plain>
        </string>
        <string>
            <plain>Стоны сердец,</plain>
        </string>
        <string>
            <plain>Слезы пусть льются,</plain>
        </string>
        <string>
            <plain>Уж близок конец.</plain>
        </string>
    </verse>
    <verse number="2">
        <string>
            <plain>Счастье приходит,</plain>
        </string>
        <string>
            <plain>Длится лишь день.</plain>
        </string>
        <string>
            <plain>Быстро уходит</plain>
        </string>
        <string>
            <plain>И снова скорбная тень.</plain>
        </string>
        <string>
            <plain>Звездочка светит</plain>
        </string>
        <string>
            <plain>Ярким огнем;</plain>
        </string>
        <string>
            <plain>Вскоре дух встретит</plain>
        </string>
        <string>
            <plain>Покой со Христом.</plain>
        </string>
    </verse>
    <verse number="3">
        <string>
            <plain>Жаль мне несчастных,</plain>
        </string>
        <string>
            <plain>Ищущих благ</plain>
        </string>
        <string>
            <plain>В целях напрасных,</plain>
        </string>
        <string>
            <plain>В мирских, туманных мечтах.</plain>
        </string>
        <string>
            <plain>В мире услады</plain>
        </string>
        <string>
            <plain>Я не ищу, Божьи отрады</plain>
        </string>
        <string>
            <plain>Я всем возвещу.</plain>
        </string>
    </verse>
</song>