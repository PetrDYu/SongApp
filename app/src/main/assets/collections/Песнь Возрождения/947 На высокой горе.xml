<?xml version='1.0' encoding='utf-8'?>
<song number="947" name="На высокой горе" canon="false" text="" textRus="" music="">
    <verse number="1">
        <string>
            <plain>На высокой горе</plain>
        </string>
        <string>
            <plain>Был устроен дворец,</plain>
        </string>
        <string>
            <plain>Весь во свете блеска был.</plain>
        </string>
        <string>
            <plain>Добрый пастырь в нем жил,</plain>
        </string>
        <string>
            <plain>Он имел сто овец.</plain>
        </string>
    </verse>
    <verse number="2">
        <string>
            <plain>В бесконечной дали</plain>
        </string>
        <string>
            <plain>Вот овечка одна</plain>
        </string>
        <string>
            <plain>Где-то в пажити зашла</plain>
        </string>
        <string>
            <plain>И от стада отошла -</plain>
        </string>
        <string>
            <plain>Заблудилась она.</plain>
        </string>
    </verse>
    <verse number="3">
        <string>
            <plain>И заметил пастух.</plain>
        </string>
        <string>
            <plain>Что овцы нет одной.</plain>
        </string>
        <string>
            <plain>Через горы перешел,</plain>
        </string>
        <string>
            <plain>На равнину он пришел -</plain>
        </string>
        <string>
            <plain>Не принес он домой.</plain>
        </string>
    </verse>
    <verse number="4">
        <string>
            <plain>Начал стадо считать,</plain>
        </string>
        <string>
            <plain>Как пришел он домой.</plain>
        </string>
        <string>
            <plain>Девяносто девять есть,</plain>
        </string>
        <string>
            <plain>А одной ему не счесть -</plain>
        </string>
        <string>
            <plain>Нет овечки одной.</plain>
        </string>
    </verse>
    <verse number="5">
        <string>
            <plain>Пришла темная ночь,</plain>
        </string>
        <string>
            <plain>Пастырь добрый не спал.</plain>
        </string>
        <string>
            <plain>Светит месяц далеко,</plain>
        </string>
        <string>
            <plain>Над горою высоко -</plain>
        </string>
        <string>
            <plain>Он овечку искал.</plain>
        </string>
    </verse>
    <verse number="6">
        <string>
            <plain>Он овечку искал</plain>
        </string>
        <string>
            <plain>И по имени звал.</plain>
        </string>
        <string>
            <plain>Ведь ее он так любил,</plain>
        </string>
        <string>
            <plain>Дорогой ценой купил -</plain>
        </string>
        <string>
            <plain>И опять потерял.</plain>
        </string>
    </verse>
    <verse number="7">
        <string>
            <plain>Потерялась она</plain>
        </string>
        <string>
            <plain>На скале высоко.</plain>
        </string>
        <string>
            <plain>И пошла она в глуши,</plain>
        </string>
        <string>
            <plain>Там, где волчий загон жил.</plain>
        </string>
        <string>
            <plain>Далеко, далеко.</plain>
        </string>
    </verse>
    <verse number="8">
        <string>
            <plain>Наступила полночь,</plain>
        </string>
        <string>
            <plain>Пастырь добрый устал:</plain>
        </string>
        <string>
            <plain>Шел из склона он на склон,</plain>
        </string>
        <string>
            <plain>Не оставил ее он,</plain>
        </string>
        <string>
            <plain>Пока не отыскал.</plain>
        </string>
    </verse>
    <verse number="9">
        <string>
            <plain>Над обрывом крутым</plain>
        </string>
        <string>
            <plain>И по скользкой тропе</plain>
        </string>
        <string>
            <plain>Хищный зверь за ней шел.</plain>
        </string>
        <string>
            <plain>Пастырь овечку нашел</plain>
        </string>
        <string>
            <plain>Там, над бездной глухой.</plain>
        </string>
    </verse>
    <verse number="10">
        <string>
            <plain>Из пустыни чужой,</plain>
        </string>
        <string>
            <plain>Из погибели злой</plain>
        </string>
        <string>
            <plain>У зверей жертву отнял.</plain>
        </string>
        <string>
            <plain>И на плечи ее взял,</plain>
        </string>
        <string>
            <plain>И принес он домой.</plain>
        </string>
    </verse>
</song>