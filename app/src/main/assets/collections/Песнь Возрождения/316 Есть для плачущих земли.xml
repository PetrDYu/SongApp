<?xml version='1.0' encoding='utf-8'?>
<song number="316" name="Есть для плачущих земли" canon="false" text="" textRus="" music="">
    <verse number="1">
        <string>
            <plain>Есть для плачущих земли</plain>
        </string>
        <string>
            <plain>Место у креста;</plain>
        </string>
        <string>
            <plain>Брат мой страждущий, займи</plain>
        </string>
        <string>
            <plain>Место у креста.</plain>
        </string>
        <string>
            <plain>Сердце все Христу открой,</plain>
        </string>
        <string>
            <plain>Отгони прочь страх людской;</plain>
        </string>
        <string>
            <plain>Дал тебе Спаситель твой</plain>
        </string>
        <string>
            <plain>Место у креста.</plain>
        </string>
    </verse>
    <verse number="2">
        <string>
            <plain>Не опаздывай в пути:</plain>
        </string>
        <string>
            <plain>Отдых у креста;</plain>
        </string>
        <string>
            <plain>Поспеши скорей найти</plain>
        </string>
        <string>
            <plain>Место у креста;</plain>
        </string>
        <string>
            <plain>Если скорбь в твоей груди,</plain>
        </string>
        <string>
            <plain>То к Спасителю приди</plain>
        </string>
        <string>
            <plain>И покой душе найди</plain>
        </string>
        <string>
            <plain>У Его креста.</plain>
        </string>
    </verse>
    <verse number="3">
        <string>
            <plain>Беззаботные! Скорей</plain>
        </string>
        <string>
            <plain>Станьте у креста.</plain>
        </string>
        <string>
            <plain>Бог вам дал в любви Своей</plain>
        </string>
        <string>
            <plain>Место у креста.</plain>
        </string>
        <string>
            <plain>И взгляните, как струей</plain>
        </string>
        <string>
            <plain>Льется там поток живой</plain>
        </string>
        <string>
            <plain>Крови чистой и святой,</plain>
        </string>
        <string>
            <plain>Крови со креста.</plain>
        </string>
    </verse>
    <verse number="4">
        <string>
            <plain>Вечная любовь зовет</plain>
        </string>
        <string>
            <plain>Всех под сень креста,</plain>
        </string>
        <string>
            <plain>И для каждого найдет</plain>
        </string>
        <string>
            <plain>Место у креста.</plain>
        </string>
        <string>
            <plain>Там свершились чудеса,</plain>
        </string>
        <string>
            <plain>Нам открылись небеса</plain>
        </string>
        <string>
            <plain>И умолкнула гроза.</plain>
        </string>
        <string>
            <plain>Тихо у креста!</plain>
        </string>
    </verse>
</song>