<?xml version='1.0' encoding='utf-8'?>
<song number="3227" name="В чудных одеждах все" canon="false" text="" textRus="" music="">
    <verse number="1">
        <string>
            <plain>В чудных одеждах все:</plain>
        </string>
        <string>
            <plain>чудно в благой стране,</plain>
        </string>
        <string>
            <plain>в небесной родине!</plain>
        </string>
        <string>
            <plain>Где чудный свет везде,</plain>
        </string>
        <string>
            <plain>где тьме придёт конец,</plain>
        </string>
        <string>
            <plain>сияет мне венец,</plain>
        </string>
        <string>
            <plain>даст мне его Творец</plain>
        </string>
        <string>
            <plain>Христос Иисус.</plain>
        </string>
    </verse>
    <chorus number="1">
        <string>
            <plain>В чудной стране жить вечно мне!</plain>
        </string>
        <string>
            <plain>Там, в вышине любовь везде.</plain>
        </string>
        <string>
            <plain>Чудный венец светит с небес,</plain>
        </string>
        <string>
            <plain>в чудный небесный дом все мы войдём.</plain>
        </string>
    </chorus>
    <verse number="2">
        <string>
            <plain>Чудный надежды свет!</plain>
        </string>
        <string>
            <plain>За ним иду я вслед</plain>
        </string>
        <string>
            <plain>в страну, где горя нет</plain>
        </string>
        <string>
            <plain>и где не знают бед.</plain>
        </string>
        <string>
            <plain>Там не известен гнёт,</plain>
        </string>
        <string>
            <plain>вечное счастье ждёт.</plain>
        </string>
        <string>
            <plain>Веди меня, Господь,</plain>
        </string>
        <string>
            <plain>только вперёд!</plain>
        </string>
    </verse>
    <verse number="3">
        <string>
            <plain>Радость небесная,</plain>
        </string>
        <string>
            <plain>тобой душа полна!</plain>
        </string>
        <string>
            <plain>И без сомнения,</plain>
        </string>
        <string>
            <plain>твёрдо уверен я,</plain>
        </string>
        <string>
            <plain>что в вечном царстве там,</plain>
        </string>
        <string>
            <plain>где я хвалу воздам,</plain>
        </string>
        <string>
            <plain>Господь Спаситель сам</plain>
        </string>
        <string>
            <plain>даст славу нам.</plain>
        </string>
    </verse>
</song>