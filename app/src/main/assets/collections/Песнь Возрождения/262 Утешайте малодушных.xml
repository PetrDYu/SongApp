<?xml version='1.0' encoding='utf-8'?>
<song number="262" name="Утешайте малодушных" canon="false" text="" textRus="" music="">
    <verse number="1">
        <string>
            <plain>Утешайте малодушных,</plain>
        </string>
        <string>
            <plain>Пока время не прошло.</plain>
        </string>
        <string>
            <plain>Свет несите в мир послушно,</plain>
        </string>
        <string>
            <plain>Пока время не прошло.</plain>
        </string>
        <string>
            <plain>Если радость мы несем</plain>
        </string>
        <string>
            <plain>На пути в Отцовский дом,</plain>
        </string>
        <string>
            <plain>Мы устлали путь добром,</plain>
        </string>
        <string>
            <plain>Пока время не прошло.</plain>
        </string>
    </verse>
    <chorus number="1">
        <string>
            <plain>Каждый день</plain>
        </string>
        <string>
            <plain>Каждый день,</plain>
        </string>
        <string>
            <plain>Будем делать всем добро,</plain>
        </string>
        <string>
            <plain>Пока время не прошло.</plain>
        </string>
    </chorus>
    <verse number="2">
        <string>
            <plain>Суета да не пленит нас,</plain>
        </string>
        <string>
            <plain>Пока время не прошло.</plain>
        </string>
        <string>
            <plain>Миром светят наши лица,</plain>
        </string>
        <string>
            <plain>Пока время не прошло.</plain>
        </string>
        <string>
            <plain>В мире много слез и бед,</plain>
        </string>
        <string>
            <plain>Доброты пропал и след,</plain>
        </string>
        <string>
            <plain>Людям братский дай совет,</plain>
        </string>
        <string>
            <plain>Пока время не прошло.</plain>
        </string>
    </verse>
    <verse number="3">
        <string>
            <plain>Разорви мирские узы,</plain>
        </string>
        <string>
            <plain>Пока время не прошло.</plain>
        </string>
        <string>
            <plain>Будь везде рабом Иисуса,</plain>
        </string>
        <string>
            <plain>Пока время не прошло.</plain>
        </string>
        <string>
            <plain>Все, что сеем каждый год,</plain>
        </string>
        <string>
            <plain>В свое время возрастет</plain>
        </string>
        <string>
            <plain>И обильный даст нам плод,</plain>
        </string>
        <string>
            <plain>Пока время не прошло.</plain>
        </string>
    </verse>
</song>